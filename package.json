{
  "name": "tweetscape",
  "private": true,
  "version": "0.0.0",
  "author": "Nicholas Chiang <tweetscape@nicholaschiang.com>",
  "homepage": "https://tweetscape.co",
  "description": "The Supercharged Twitter Feed",
  "license": "AGPL-3.0",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "postinstall": "remix setup node",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build": "yarn build:css && yarn build:remix",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently yarn:dev:remix yarn:dev:css",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "deploy": "fly deploy --remote-only",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx app",
    "style": "pretty-quick"
  },
  "dependencies": {
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "classnames": "^2.3.1",
    "html-entities": "^2.3.2",
    "nanoid": "^3.3.1",
    "pg": "^8.7.3",
    "pg-format": "^1.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@types/pg": "^8",
    "@types/pg-format": "^1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "autoprefixer": "^10.4.2",
    "bottleneck": "^2.19.5",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.8",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.0"
}
