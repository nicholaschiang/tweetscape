{
  "name": "tweetscape",
  "private": true,
  "version": "0.0.0",
  "author": "Nicholas Chiang <tweetscape@nicholaschiang.com>",
  "homepage": "https://tweetscape.com",
  "description": "The Supercharged Twitter Feed",
  "license": "AGPL-3.0",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build": "yarn build:css && yarn build:remix",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "deploy": "yarn build && wrangler publish"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.2.2",
    "@remix-run/react": "^1.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.2.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "miniflare": "^2.1.0",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "yarn-run-all": "^3.1.1"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.0"
}
