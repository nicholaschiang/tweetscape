{
  "name": "tweetscape",
  "private": true,
  "version": "0.0.10",
  "author": "Nicholas Chiang <tweetscape@nicholaschiang.com>",
  "homepage": "https://tweetscape.co",
  "description": "The Supercharged Twitter Feed",
  "license": "AGPL-3.0",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build": "yarn build:css && yarn build:remix",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:cy": "cypress open",
    "dev": "concurrently yarn:dev:remix yarn:dev:css",
    "dev:postgres": "dotenv -- bash -c 'sudo docker run -e POSTGRES_PASSWORD=$POSTGRES_PASSWORD -p 5432:5432 postgres'",
    "dev:redis": "dotenv -- bash -c 'sudo docker run -p 6379:6379 redis redis-server --protected-mode yes --requirepass $REDIS_PASSWORD'",
    "dev:seed": "dotenv -- bash -c 'psql $DATABASE_URL -f cypress/fixtures/db.sql'",
    "start:cy": "percy exec -- cypress run",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "deploy": "fly deploy --remote-only",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx app",
    "style": "pretty-quick",
    "setup:sharp": "(cd ./node_modules/sharp && yarn run install)",
    "setup:remix": "remix setup node",
    "setup:prisma": "prisma generate",
    "postinstall": "concurrently yarn:setup:sharp yarn:setup:remix yarn:setup:prisma"
  },
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "@remix-run/node": "^1.3.1",
    "@remix-run/react": "^1.3.1",
    "@remix-run/serve": "^1.3.1",
    "@twitter-api-v2/plugin-rate-limit": "^1.0.0",
    "accept-language-parser": "^1.5.0",
    "bottleneck": "^2.19.5",
    "classnames": "^2.3.1",
    "html-entities": "^2.3.2",
    "html5parser": "^2.0.2",
    "nanoid": "^3.3.1",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redis": "^4.0.4",
    "remix": "^1.3.1",
    "sharp": "^0.30.3",
    "tiny-invariant": "^1.2.0",
    "twitter-api-v2": "^1.11.0",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@percy/cli": "^1.0.0-beta.76",
    "@percy/cypress": "^3.1.1",
    "@remix-run/dev": "^1.3.1",
    "@types/accept-language-parser": "^1.5.3",
    "@types/nprogress": "^0.2.0",
    "@types/pg": "^8.6.5",
    "@types/pg-format": "^1.0.2",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/sharp": "^0.30.0",
    "@types/twitter-text": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.2",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "node-fetch": "^3.2.3",
    "pg": "^8.7.3",
    "pg-format": "^1.0.4",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "pretty-quick": "^3.1.3",
    "prisma": "^3.11.0",
    "release": "^6.3.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.0"
}
