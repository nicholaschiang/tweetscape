{
  "name": "tweetscape",
  "private": true,
  "version": "0.0.0",
  "author": "Nicholas Chiang <tweetscape@nicholaschiang.com>",
  "homepage": "https://tweetscape.co",
  "description": "The Supercharged Twitter Feed",
  "license": "AGPL-3.0",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build": "yarn build:css && yarn build:remix",
    "dev:build": "cross-env NODE_ENV=development remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "yarn dev:build && concurrently yarn:dev:remix yarn:dev:css yarn:dev:miniflare",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "deploy": "yarn build && yarn wrangler publish",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx app",
    "style": "pretty-quick"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.2.2",
    "@remix-run/react": "^1.2.2",
    "classnames": "^2.3.1",
    "html-entities": "^2.3.2",
    "nanoid": "^3.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.8",
    "@remix-run/dev": "^1.2.2",
    "@remix-run/eslint-config": "^1.2.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "miniflare": "^2.1.0",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.0"
}
