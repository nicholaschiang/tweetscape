{
  "name": "tweetscape",
  "private": true,
  "version": "0.0.21",
  "author": "Nicholas Chiang <tweetscape@nicholaschiang.com>",
  "homepage": "https://tweetscape.co",
  "description": "The Supercharged Twitter Feed",
  "license": "AGPL-3.0",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build": "yarn build:css && yarn build:remix",
    "dev:remix": "cross-env NODE_ENV=development remix dev --debug",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:cy": "cypress open",
    "dev": "concurrently yarn:dev:remix yarn:dev:css",
    "dev:postgres": "dotenv -- bash -c 'docker run -e POSTGRES_PASSWORD=$POSTGRES_PASSWORD -p 5432:5432 postgres'",
    "dev:redis": "dotenv -- bash -c 'docker run -p 6379:6379 redis redis-server --protected-mode yes --requirepass $REDIS_PASSWORD'",
    "dev:seed": "dotenv -- bash -c 'psql $DATABASE_URL -f cypress/fixtures/db.sql'",
    "start:cy": "percy exec -- cypress run",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "deploy": "fly deploy --remote-only",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx app",
    "style": "pretty-quick",
    "setup:sharp": "(cd ./node_modules/sharp && yarn run install)",
    "setup:remix": "remix setup node",
    "setup:prisma": "prisma generate",
    "postinstall": "concurrently yarn:setup:sharp yarn:setup:remix yarn:setup:prisma"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.3.1",
    "@prisma/client": "^3.11.1",
    "@radix-ui/react-portal": "^0.1.4",
    "@react-spring/web": "^9.4.4",
    "@remix-run/node": "^1.3.4",
    "@remix-run/react": "^1.3.4",
    "@remix-run/serve": "^1.3.4",
    "@twitter-api-v2/plugin-rate-limit": "^1.1.0",
    "accept-language-parser": "^1.5.0",
    "bottleneck": "^2.19.5",
    "classnames": "^2.3.1",
    "dequal": "^2.0.2",
    "esbuild": "^0.14.31",
    "front-matter": "^4.0.2",
    "html-entities": "^2.3.3",
    "html5parser": "^2.0.2",
    "json-bigint": "^1.0.0",
    "marked": "^4.0.12",
    "mdx-bundler": "^9.0.0",
    "nanoid": "^3.3.2",
    "pg-promise": "^10.11.1",
    "postgres-array": "^3.0.1",
    "react": "^17.0.2",
    "react-cool-onclickoutside": "^1.7.0",
    "react-dom": "^17.0.2",
    "react-infinite-scroll-component": "^6.1.0",
    "react-use-measure": "^2.1.1",
    "redis": "^4.0.6",
    "remix": "^1.3.4",
    "sharp": "^0.30.3",
    "superjson": "^1.8.1",
    "timeago-react": "^3.0.4",
    "timeago.js": "^4.0.2",
    "tiny-invariant": "^1.2.0",
    "twitter-api-v2": "^1.11.2",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@percy/cli": "^1.0.1",
    "@percy/cypress": "^3.1.1",
    "@remix-run/dev": "^1.3.4",
    "@tailwindcss/typography": "^0.5.2",
    "@types/accept-language-parser": "^1.5.3",
    "@types/json-bigint": "^1.0.1",
    "@types/marked": "^4.0.3",
    "@types/pg": "^8.6.5",
    "@types/pg-format": "^1.0.2",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/sharp": "^0.30.0",
    "@types/twitter-text": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.3",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "node-fetch": "^3.2.3",
    "pg": "^8.7.3",
    "pg-format": "^1.0.4",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "prisma": "^3.11.1",
    "release": "^6.3.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.0"
}
